	urldate = {2022-03-21},
	journal = {Journal of Behavior Therapy and Experimental Psychiatry},
	author = {Lobbestael, Jill and van Teffelen, Martijn and Baumeister, Roy F.},
	month = jun,
	year = {2020},
	keywords = {Sadism, Psychopathy, Bug grinder, Coldheartedness, Sadistic pleasure},
