	author = {Ferguson, Christopher J.},
	year = {2010},
	pages = {659--667},
	file = {Ferguson - 2010 - A meta-analysis of normal and disordered personali.pdf:files/2166/Ferguson - 2010 - A meta-analysis of normal and disordered personali.pdf:application/pdf},
}

