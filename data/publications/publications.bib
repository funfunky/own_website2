	author = {Ścigała, Karolina Aleksandra and Nockur, Laila and Lilleholt, Lau and Pfattheicher, Stefan},
	month = aug,
	year = {2022},
	keywords = {bribery, corruption, inequality, Social and Behavioral Sciences, Social and Personality Psychology},
	file = {Full Text PDF:files/3297/Ścigała et al. - 2022 - The effects of resource inequality on bribery.pdf:application/pdf},
